generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  otp       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  meet      meet[]

  @@map("users")
}

model meet {
  id        String   @id @default(uuid())
  user      user     @relation(fields: [userId], references: [id])
  userId    String
  startsAt  DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("meets")
}
